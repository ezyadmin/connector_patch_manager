<<COMMENT_YUM
#use inventory agent 
yum -q list installed | tr "\n" "#" | sed -e 's/# / /g' | tr "#" "\n"  | while read i
do
    i=$(echo $i) #this strips off yum's irritating use of whitespace
    if [ "${i}x" != "x" ]
    then
        UVERSION=${i#*\ }
        UVERSION=${UVERSION%\ *}
        PNAME=${i%%\ *}
        PNAME=${PNAME%.*}
        ARCH=${i%%\ *}
        ARCH=${ARCH##*.}
